<resources>
    <style name="FaceCameraTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorForeground">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/accent</item> <!-- ripple coloring-->
    </style>

    <style name="FaceCameraImageButtonStyle" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="FaceCameraBottomToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary_light</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
